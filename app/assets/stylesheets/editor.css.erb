#up_submit {
	float:right;
	position:fixed;
	top:0px;
	right:0px;
}

/* STATIC CONTROL BAR STYLES*/
#staticControl {
	position:fixed;
	top:50px;
	right:0px;
}

#staticControl button {
	height:30px;
	margin-bottom:5px;
}

#staticControl ul {
	clear:both;
}

#title_div, #new_pic, #new_elem {
	float:right;
}

#title_div button, #new_pic button, #new_elem button{
	float:left;
}

#header_menu .title_menu_li, #new_pic_menu .image_menu_li, #new_elem_menu .elem_menu_li {
	list-style: none;
}

#new_element button{
	float:right;
	clear:right;
}

#sort {
	float:right;
	clear:right;
}

#sort button span.ui-button-text {
	padding-top:0px;
}
/*Text Button Styles */
.ui-button-text-only .ui-button-text {
    padding: 0.1em 0.3em 0em 0.3em;
    height:30px;
    overflow:hidden;
}

