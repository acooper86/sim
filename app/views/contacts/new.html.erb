<h1>Create A New Contact for <%= @user.first_name %></h1>

<%= form_for([@user, @contact]) do |c| %>
	<%= render 'shared/error_messages', :object => c.object %>
	<%= c.hidden_field :created_from, :value => "user" %>
	<%= c.label :ctype, "Type"%>
	<%= c.radio_button :ctype, "client"%><%= c.label :ctype, "Client"%>
	<%= c.radio_button :ctype, "business"%><%= c.label :ctype, "Business Contact"%>
	<%= c.radio_button :ctype, "subscriber"%><%= c.label :ctype, "Subscriber"%>
	<%= c.label :first_name %>
	<%= c.text_field :first_name %>	
	<%= c.label :last_name %>
	<%= c.text_field :last_name %>	
	<%= c.label :email %>
	<%= c.text_field :email %>
	<%= c.label :secondary_email %>
	<%= c.text_field :secondary_email %>
	<%= c.label :phone %>
	<%= c.text_field :phone %>
	<%= c.label :address_l1, "Address:" %>
	<%= c.text_field :address_l1 %>
	<%= c.label :address_l2, "Address Line 2:" %>
	<%= c.text_field :address_l2 %>
	<%= c.label :city %>
	<%= c.text_field :city %>
	<%= c.label :state %>
	<%= c.text_field :state %>
	<%= c.label :zip %>
	<%= c.text_field :zip %>
	<%= c.label :business, "Business Name" %>
	<%= c.text_field :business %>
	<%= c.label :birth_date %>
	<%= c.date_select :birth_date, :include_blank=>true, :order=>[:month, :day] %>
	<%= c.label :email_list%>
	<%= c.check_box :email_list %>
	<%= c.submit %>
	
<% end %>