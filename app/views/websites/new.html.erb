<% stylesheet('websites')%>
<% javascript('websites')%>
<h1>Websites New Page</h1>

<%= form_for([@user, @website]) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<%= f.label :domain %>
	<%= f.text_field :domain %>
	
	<%= f.label :title %>
	<%= f.text_field :title %>
	
	<%= f.label :motto %>
	<%= f.text_field :motto %>
	
	<%= f.label :description %>
	<%= f.text_field :description %>
	
	<%= f.label :keywords %>
	<%= f.text_field :keywords %>
	
	<%= f.label :theme %>
	<%= f.select :theme, options_for_select([['green','green.css'],['blue','blue.css']]) %>
	
	
	<%= f.submit %>
	
<% end %>