<% stylesheet('sessions') %>
<div id="sign_in">
<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	
	<div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>
	
	<div class="field">
		<%= f.label "Permanent?:" %><br />
		<%= f.check_box :permanent %>
	</div>
	
	<div class="actions">
		<%= f.submit "Sign in" %>
	</div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
<p>Forgetten Password?<%= link_to "Reset Password", new_password_reset_path %>
</div>